<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/border_for_popup3"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/carpiLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_cancel_24"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/carpiLevel"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        >

        <TextView
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:id="@+id/oyunBittiTextLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/oyun_sona_erdi"
            android:textColor="#C89635"
            android:textSize="27sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/oyunBittiLevelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/fredoka_one"
            android:text="LEVEL 5"
            android:textColor="#C89635"
            android:textSize="20sp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oyunBittiTextLevel" />

        <ProgressBar
            android:id="@+id/progressbarLevelOyunBitti"
            android:progressDrawable="@drawable/custom_progressbar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="220dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oyunBittiLevelText" />


        <TextView
            android:id="@+id/levelYuzdelik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/fredoka_one"
            android:textColor="#C89635"
            android:text="%80"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progressbarLevelOyunBitti" />

        <TextView
            android:id="@+id/levelTextAciklama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat"
            android:textColor="#C89635"
            android:text="Bu seviyenin bitmesine az kalmıştı."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/levelYuzdelik" />

        <androidx.appcompat.widget.AppCompatButton
            android:drawableLeft="@drawable/ic_baseline_smart_display_24"
            android:drawablePadding="5dp"
            android:id="@+id/reklamIzleVeDevamEtLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="190dp"
            android:background="@drawable/button_bg_reklam_izle"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/reklam_izle_devam_et"
            android:textColor="#45A720"
            android:layout_marginTop="25dp"
            android:textSize="11dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/levelTextAciklama" />


        <androidx.appcompat.widget.AppCompatButton
            android:drawableLeft="@drawable/ic_baseline_replay_24"
            android:drawablePadding="5dp"
            android:id="@+id/tekrarOynaButtonLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="190dp"
            android:background="@drawable/button_bg_tekrar_oyna"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/tekrar_oyna"
            android:textColor="#206CA7"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reklamIzleVeDevamEtLevel" />


    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>